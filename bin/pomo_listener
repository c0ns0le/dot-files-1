#!/bin/bash

if [ ! -p ~/.pomos/pomo_commands ]; then
  mkdir -pv ~/.pomos
  mkfifo ~/.pomos/pomo_commands
fi

echo
echo "Pomodoro Listener Started..."
echo

tmux ls || echo 'echo "tmux a || tmux" >~/.pomos/pomo_runner' >~/.pomos/pomo_commands

while true
do
  cmd="$(cat ~/.pomos/pomo_commands)"
  echo "$cmd"
  bash -c "$cmd"
done

